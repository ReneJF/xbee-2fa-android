<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:padding="@dimen/activity_horizontal_margin">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="LED On/Off Device"
            android:id="@+id/textView" android:paddingBottom="@dimen/activity_vertical_margin"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Device ID"
            android:id="@+id/textView3" android:textStyle="bold"
            android:layout_marginTop="@dimen/activity_vertical_margin"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/deviceIdTextView"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RSSI"
            android:id="@+id/textView2" android:textStyle="bold"
            android:layout_marginTop="@dimen/activity_vertical_margin"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rssiTextView"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Use the toggle button below to control the LED on the remote device"
            android:id="@+id/textView4" android:layout_marginTop="@dimen/activity_vertical_margin"/>
    <ToggleButton
            android:layout_width="310dp"
            android:layout_height="87dp"
            android:text="Led"
            android:id="@+id/toggleButton"
            android:checked="false"
            android:onClick="onToggleLedClicked" android:layout_margin="@dimen/activity_horizontal_margin"/>
</LinearLayout>